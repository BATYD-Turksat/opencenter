{
    "start_state": "s1",
    "states": {
        "s1": {
            "primitive": "agent.run_task",
            "parameters": {
                "action": "sleep",
                "payload": {
                    "CHEF_URI": "chef_server.facts.chef_server_uri",
                    "CHEF_PEM": "chef_server.facts.chef_server_pem"
                }
            },
            "on_success": "s2"
        },
        "s2": {
            "primitive": "agent.run_task",
            "parameters": {
                "action": "sleep",
                "payload": {}
            },
            "on_success": "s3"
        },
        "s3": {
            "primitive": "node.add_backend",
            "parameters": {
                "backend": "chef-client"
            }
        }
    }
}
