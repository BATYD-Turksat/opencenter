{
    "start_state": "s1",
    "states": {
        "s1": {
            "primitive": "agent.run_task",
            "parameters": {
                "action": "sleep",
                "payload": {
                    "CHEF_SERVER": "{chef-server}"
                }},
            "on_success": "s2"
        },
        "s2": {
            "primitive": "run_task",
            "parameters": {
                "action": "run_chef",
                "payload": {}},
            "on_success": "s3"
        },
        "s3": {
            "primitive": "node.add_backend",
            "parameters": {
                "backend": "chef-client"
            }
        }
    }
}
